{
  "name": "react-initial",
  "version": "1.0.0",
  "description": "Initial config for react",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build-client && npm run build-server",
    "build-client": "NODE_ENV=production BABEL_ENV=production node -r babel-register node_modules/.bin/webpack --progress --display-modules --config webpack/webpack.config.client.js",
    "build-server": "NODE_ENV=production BABEL_ENV=production node -r babel-register node_modules/.bin/webpack --progress --config webpack/webpack.config.server.js",
    "clean": "rimraf dist/ && rimraf public/app",
    "flow": "flow",
    "flow-init": "npm run flow init",
    "lint": "eslint src",
    "lint-staged": "lint-staged",
    "precommit": "npm run lint-staged & npm run lint && npm run flow",
    "postcommit": "npm run test",
    "prepush": "echo Yeah!!",
    "postmerge": "npm install",
    "postrewrite": "npm install",
    "start": "npm run clean && NODE_ENV=development BABEL_ENV=development babel-node src/server",
    "start-analyzer": "npm run clean && NODE_ENV=development BABEL_ENV=development ANALYZER=true babel-node src/server",
    "start-production": "npm run build && NODE_ENV=production BABEL_ENV=production babel-node src/server",
    "test": "echo \"Error: no test specified\"",
    "watch-client": "webpack --watch --config webpack/webpack.config.client.js",
    "watch-server": "webpack --watch --config webpack/webpack.config.server.js"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix prettier --parser",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sh4d1t0/react-initial.git"
  },
  "author": "Angel Orea",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sh4d1t0/react-initial/issues"
  },
  "homepage": "https://github.com/sh4d1t0/react-initial#readme",
  "dependencies": {
    "express": "^4.16.3",
    "node-time-ago": "^1.0.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "compression-webpack-plugin": "^1.1.11",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.8.2",
    "eslint-plugin-standard": "^3.1.0",
    "flow-bin": "^0.72.0",
    "husky": "^0.14.3",
    "isomorphic-style-loader": "^4.0.0",
    "lint-staged": "^7.1.2",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "open": "0.0.5",
    "prettier": "1.13.0",
    "react-hot-loader": "^4.2.0",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "webpack": "^4.9.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^2.1.4",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-hot-server-middleware": "^0.5.0",
    "webpack-merge": "^4.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
